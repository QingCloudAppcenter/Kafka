{{- $myRole := getv "/host/role" }}
{{- $myIp := getv "/host/ip" }}
{{- $zkPort :=  "2181" }}

{{- if eq $myRole "client" }}

encrypted=$(echo -n {{ getv "/cluster/cluster_id" }}{{ getv "/cluster/user_id" }} | sha256sum | base64)

flush > /opt/app/conf/cmak/application.conf << APP_CONF_EOF
play.crypto.secret="${encrypted:0:65}"
play.crypto.secret=\${?APPLICATION_SECRET}

# The application languages
# ~~~~~
play.i18n.langs=["en"]

play.application.loader=loader.KafkaManagerLoader
play.http.requestHandler = "play.http.DefaultHttpRequestHandler"
play.http.context = "/"

# dependency
kafka-manager.consumer.properties.file=/opt/app/conf/cmak/consumer.properties
cmak.zkhosts="{{ range $i, $p := getvs "/links/zk_service/hosts/*/ip" }}
  {{- if $i }},{{ end }}
  {{- . }}:{{ $zkPort }}
{{- end }}/kafka/{{ getv "/cluster/cluster_id" }}"
cmak.base-zk-path="/kafka-manager/{{ getv "/cluster/cluster_id" }}"
pinned-dispatcher.type="PinnedDispatcher"
pinned-dispatcher.executor="thread-pool-executor"
application.features=["KMClusterManagerFeature","KMTopicManagerFeature","KMPreferredReplicaElectionFeature","KMReassignPartitionsFeature"]

akka {
  loggers = ["akka.event.slf4j.Slf4jLogger"]
  loglevel = "WARNING"
}

{{- range gets "/env/kafka-manager.basic*" }}
{{ replace (base .Key) "kafka-manager." "" -1 }}="{{ .Value }}"
{{- end }}
basicAuthentication.realm="Kafka-Manager"
http.port={{ getv "/env/kafka-manager.port" "9000" }}
APP_CONF_EOF

{{- end }}
